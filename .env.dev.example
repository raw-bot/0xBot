# Configuration pour l'auto-démarrage du bot
# IMPORTANT: Copiez ce fichier vers .env.dev et remplissez vos credentials !

# Credentials d'authentification (email et mot de passe du compte demo)
DEV_EMAIL=demo@example.com
DEV_PASSWORD=YOUR_PASSWORD_HERE

# ID du bot à démarrer automatiquement (obtenu après création du bot)
AUTO_START_BOT_ID=YOUR_BOT_ID_HERE

# === CLÉS API POUR LLM ===
# DeepSeek Chat - Modèle optimisé pour performance et coûts
# Obtenir une clé: https://platform.deepseek.com/
DEFAULT_LLM_MODEL=deepseek-chat
DEEPSEEK_API_KEY=sk-YOUR_DEEPSEEK_API_KEY_HERE

# === OPTIONNEL: News API ===
# CryptoCompare pour les news crypto (optionnel mais recommandé)
# Obtenir une clé: https://min-api.cryptocompare.com/
CRYPTOCOMPARE_API_KEY=YOUR_CRYPTOCOMPARE_API_KEY_HERE

# === OPTIMISATIONS PERFORMANCE LLM ===
LLM_ENABLE_CACHE=true
LLM_CACHE_TTL_SECONDS=300
LLM_MAX_TOKENS_PER_CALL=300
LLM_TEMPERATURE_DEFAULT=0.2
LLM_BATCH_SIZE=5
LLM_DAILY_COST_LIMIT_USD=5.0

# === OPTIMISATIONS DATABASE ===
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# === OPTIMISATIONS RÉSEAU ===
HTTP_CONNECT_TIMEOUT=5
HTTP_READ_TIMEOUT=10
HTTP_MAX_CONNECTIONS=100
HTTP_RATE_LIMIT_PER_MINUTE=1000

# === MONITORING PERFORMANCE ===
PERFORMANCE_MONITORING=true
ENABLE_METRICS=true
METRICS_COLLECTION_INTERVAL=60
